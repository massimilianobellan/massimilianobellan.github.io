  }

  .title {
    display: flex;
    flex-direction: column;
  }

  .name {
    font-size: 2rem;
  }

  .subtitle {
    opacity: 70%;
  }

  .info {
    font-size: 1.2rem;
  }

  .links {
    display: flex;
    gap: 1rem;
  }
</style>
